<!DOCTYPE HTML>
<html>
  <head>
    <title>Bracket Builder</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <% if @js %>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <% @js.each do |script| %>
        <%= "<script src=\"/js/#{script}\"></script>" %>
      <% end %>
    <% end %>
  </head>
  <body>
    <div class="header">
      <div class="container">
        <a href="/">
          <div class="logo">
            <img src="/images/Bracket-Builder_Logo.png" style="margin: 0 10px -6px 0; display: inline-block" /> Bracket Builder
          </div>
        </a>
        <div class="link">
          <% if logged_in? %>
            <a href="/logout">Logout</a>
          <% else %>
            <a href="/login">Login</a>
          <% end %>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
